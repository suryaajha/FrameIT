<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4"
    android:id="@+id/login_form"
    tools:context="pict.s2k.frameit.subactivities.LoginActivity">

        <AutoCompleteTextView
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="181dp"
            android:background="@drawable/input_outline"
            android:ems="10"
            android:focusedByDefault="true"
            android:hint="Email address"
            android:inputType="textEmailAddress"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/txt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_outline"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="24dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textSize="16sp"
            android:layout_marginEnd="36dp"
            android:imeActionId="@+id/login"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_below="@+id/txt_email"
            android:layout_alignStart="@+id/txt_email"
            android:layout_marginTop="18dp" />
        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:onClick="attemptLogin"
            android:layout_marginTop="18dp"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_below="@+id/txt_password"
            android:layout_centerHorizontal="true" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            fancy:fb_defaultColor="#3b5998"
            fancy:fb_iconResource="@drawable/ic_facebook"
            fancy:fb_fontIconSize="30dp"
            fancy:fb_radius="5dp"
            fancy:fb_text=""
            android:layout_marginTop="43dp"
            android:layout_marginRight="36dp"
            android:layout_below="@+id/btn_sign_in"
            android:layout_alignEnd="@+id/btn_sign_in" />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:paddingTop="12dp"
            fancy:fb_defaultColor="@android:color/white"
            fancy:fb_fontIconSize="30dp"
            fancy:fb_iconResource="@drawable/google"
            fancy:fb_radius="5dp"
            fancy:fb_text=""
            android:onClick="signIn"
            android:layout_marginStart="36dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_alignBottom="@+id/btn_facebook"
            android:layout_alignStart="@+id/btn_sign_in" />

        <TextView
            android:id="@+id/or_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_sign_in"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginTop="18dp"/>

        <Button
            android:id="@+id/btn_forget_password"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:onClick="forgetPassword"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="Forget password ?"
            android:layout_marginBottom="12dp"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btn_new_account"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick="createNewAccount"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text="Don't have account ?"
            android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>
